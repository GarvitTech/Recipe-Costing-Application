<Page x:Class="RecipeCostingApp.Views.RecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Recipes">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="ðŸ“‹ Recipe Management" Style="{StaticResource SectionHeader}" FontSize="24"/>

        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" CornerRadius="5" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Recipe Name:" Style="{StaticResource FieldLabel}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="TxtRecipeName" Style="{StaticResource InputTextBox}" Margin="0,0,20,0"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Category:" Style="{StaticResource FieldLabel}"/>
                <ComboBox Grid.Row="0" Grid.Column="3" Name="CmbRecipeCategory" Style="{StaticResource InputComboBox}" IsEditable="True">
                    <ComboBoxItem Content="Appetizers"/>
                    <ComboBoxItem Content="Main Course"/>
                    <ComboBoxItem Content="Desserts"/>
                    <ComboBoxItem Content="Beverages"/>
                </ComboBox>

                <Label Grid.Row="1" Grid.Column="0" Content="Waste %:" Style="{StaticResource FieldLabel}" Margin="0,10,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="TxtRecipeWaste" Style="{StaticResource InputTextBox}" Text="0" Margin="0,10,20,0"/>

                <Label Grid.Row="1" Grid.Column="2" Content="Portions:" Style="{StaticResource FieldLabel}" Margin="0,10,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="3" Name="TxtPortions" Style="{StaticResource InputTextBox}" Text="1" Margin="0,10,0,0"/>

                <StackPanel Grid.Row="1" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Name="BtnSaveRecipe" Content="ðŸ’¾ Save Recipe" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" Click="BtnSaveRecipe_Click"/>
                    <Button Name="BtnClearRecipe" Content="ðŸ—‘ï¸ Clear" Style="{StaticResource PrimaryButton}" Click="BtnClearRecipe_Click"/>
                </StackPanel>

                <Label Grid.Row="2" Grid.Column="0" Content="Ingredients:" Style="{StaticResource SectionHeader}" Grid.ColumnSpan="5" Margin="0,20,0,10"/>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" MinWidth="400"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,10">
                        <ComboBox Name="CmbIngredients" Width="200" Style="{StaticResource InputComboBox}" 
                                 DisplayMemberPath="Name" IsEditable="True" IsTextSearchEnabled="True"/>
                        <TextBox Name="TxtQuantity" Width="100" Style="{StaticResource InputTextBox}" Margin="10,0" ToolTip="Quantity"/>
                        <Button Name="BtnAddIngredient" Content="âž• Add" Style="{StaticResource PrimaryButton}" Click="BtnAddIngredient_Click"/>
                        <Button Name="BtnAddSubRecipe" Content="ðŸ“‹ Add Sub-Recipe" Style="{StaticResource PrimaryButton}" 
                               Margin="10,0,0,0" Click="BtnAddSubRecipe_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" Name="DgRecipeIngredients" Style="{StaticResource ModernDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ingredient" Binding="{Binding Ingredient.Name}" Width="200"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Unit" Binding="{Binding Ingredient.Unit}" Width="60"/>
                            <DataGridTextColumn Header="Cost" Binding="{Binding TotalCost, StringFormat=C2}" Width="80"/>
                            <DataGridTemplateColumn Header="" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ—‘ï¸" Click="BtnRemoveIngredient_Click" Tag="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Background="{StaticResource CalculatedBrush}" Padding="15">
                        <StackPanel>
                            <TextBlock Name="TxtTotalWeight" Text="Total Weight: 0g" FontWeight="Bold"/>
                            <TextBlock Name="TxtRecipeCost" Text="Recipe Cost: 0.000 KWD" FontWeight="Bold"/>
                            <TextBlock Name="TxtCostPerPortion" Text="Cost per Portion: 0.000 KWD" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <Label Content="ðŸ“Š Costing Analysis" Style="{StaticResource SectionHeader}"/>
                        
                        <Label Content="GST %:" Style="{StaticResource FieldLabel}"/>
                        <TextBox Name="TxtGst" Style="{StaticResource InputTextBox}" Text="18" Margin="0,0,0,10"/>
                        
                        <Label Content="Packaging:" Style="{StaticResource FieldLabel}"/>
                        <TextBox Name="TxtPackaging" Style="{StaticResource InputTextBox}" Text="0" Margin="0,0,0,10"/>
                        
                        <Label Content="Delivery:" Style="{StaticResource FieldLabel}"/>
                        <TextBox Name="TxtDelivery" Style="{StaticResource InputTextBox}" Text="0" Margin="0,0,0,10"/>
                        
                        <Label Content="Selling Price:" Style="{StaticResource FieldLabel}"/>
                        <TextBox Name="TxtSellingPrice" Style="{StaticResource InputTextBox}" Margin="0,0,0,20"/>
                        
                        <Border Background="{StaticResource CalculatedBrush}" Padding="10" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Name="TxtFinalCost" Text="Final Cost: 0.000 KWD" FontWeight="Bold"/>
                                <TextBlock Name="TxtProfit" Text="Profit: 0.000 KWD" FontWeight="Bold"/>
                                <TextBlock Name="TxtCostPercentage" Text="Cost %: 0%" FontWeight="Bold"/>
                                <TextBlock Name="TxtGrossMargin" Text="Margin %: 0%" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>