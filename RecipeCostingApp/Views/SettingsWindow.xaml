<Window x:Class="RecipeCostingApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Settings" Height="650" Width="750"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="âš™ï¸ Application Settings" Style="{StaticResource SectionHeader}" FontSize="20"/>

        <TabControl Grid.Row="1" Margin="0,20,0,20">
            <TabItem Header="General">
                <StackPanel Margin="20">
                    <Label Content="Default GST Percentage:" Style="{StaticResource FieldLabel}"/>
                    <TextBox Name="TxtDefaultGst" Style="{StaticResource InputTextBox}" Width="100" HorizontalAlignment="Left" Text="18"/>
                    
                    <Label Content="Default Currency Symbol:" Style="{StaticResource FieldLabel}" Margin="0,20,0,0"/>
                    <TextBox Name="TxtCurrencySymbol" Style="{StaticResource InputTextBox}" Width="100" HorizontalAlignment="Left" Text="$"/>
                    
                    <Label Content="Company Name:" Style="{StaticResource FieldLabel}" Margin="0,20,0,0"/>
                    <TextBox Name="TxtCompanyName" Style="{StaticResource InputTextBox}" Width="300" HorizontalAlignment="Left" Text="Your Restaurant Name"/>
                    
                    <CheckBox Name="ChkAutoBackup" Content="Enable automatic daily backups" Margin="0,20,0,0"/>
                    <CheckBox Name="ChkShowTooltips" Content="Show helpful tooltips" Margin="0,10,0,0" IsChecked="True"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Database">
                <StackPanel Margin="20">
                    <Label Content="Database Location:" Style="{StaticResource FieldLabel}"/>
                    <TextBox Name="TxtDatabasePath" Style="{StaticResource CalculatedTextBox}" IsReadOnly="True" Margin="0,0,0,10"/>
                    
                    <Button Name="BtnOpenDbFolder" Content="ðŸ“ Open Database Folder" Style="{StaticResource PrimaryButton}" 
                           HorizontalAlignment="Left" Click="BtnOpenDbFolder_Click"/>
                    
                    <Label Content="Database Options:" Style="{StaticResource SectionHeader}" Margin="0,30,0,10"/>
                    <Button Name="BtnCreateBackup" Content="ðŸ’¾ Create Backup Now" Style="{StaticResource PrimaryButton}" 
                           HorizontalAlignment="Left" Click="BtnCreateBackup_Click"/>
                    <Button Name="BtnRestoreBackup" Content="ðŸ“¥ Restore from Backup" Style="{StaticResource PrimaryButton}" 
                           HorizontalAlignment="Left" Margin="0,10,0,0" Click="BtnRestoreBackup_Click"/>
                    <Button Name="BtnClearDatabase" Content="ðŸ—‘ï¸ Clear Database" Style="{StaticResource PrimaryButton}" 
                           HorizontalAlignment="Left" Margin="0,10,0,0" Click="BtnClearDatabase_Click" Background="#DC3545"/>
                    
                    <Label Content="Database Statistics:" Style="{StaticResource SectionHeader}" Margin="0,30,0,10"/>
                    <TextBlock Name="TxtDbStats" Text="Loading..." Margin="0,0,0,10"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="About">
                <StackPanel Margin="20">
                    <Label Content="Professional Recipe Costing &amp; Menu Engineering" FontSize="16" FontWeight="Bold"/>
                    <Label Content="Version 1.0.0" FontSize="14" Margin="0,5,0,0"/>
                    <Label Content="Complete food cost management system" FontSize="12" Margin="0,5,0,0"/>
                    <Label Content="Made by Garvit" FontSize="14" FontWeight="Bold" Foreground="#2E86AB" Margin="0,10,0,20"/>
                    
                    <Label Content="Features:" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Text="â€¢ Complete ingredient database management" Margin="10,5,0,0"/>
                    <TextBlock Text="â€¢ Real-time recipe costing calculations" Margin="10,5,0,0"/>
                    <TextBlock Text="â€¢ Professional PDF report generation" Margin="10,5,0,0"/>
                    <TextBlock Text="â€¢ Bulk costing for events and catering" Margin="10,5,0,0"/>
                    <TextBlock Text="â€¢ Menu engineering analysis" Margin="10,5,0,0"/>
                    <TextBlock Text="â€¢ Database backup and restore" Margin="10,5,0,0"/>
                    
                    <Label Content="System Information:" Style="{StaticResource SectionHeader}" Margin="0,20,0,0"/>
                    <TextBlock Name="TxtSystemInfo" Text="Loading..." Margin="10,5,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="BtnSaveSettings" Content="ðŸ’¾ Save Settings" Style="{StaticResource PrimaryButton}" 
                   Margin="0,0,10,0" Click="BtnSaveSettings_Click"/>
            <Button Name="BtnCancel" Content="âŒ Cancel" Style="{StaticResource PrimaryButton}" 
                   Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>